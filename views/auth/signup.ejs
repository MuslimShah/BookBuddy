<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="login-form" action="/signup" method="POST" >
            <h1>SignUp</h1>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                class="<%=validationError.find(e=>e.path==='email') ? 'invalid':''%>"
                type="email" 
                name="email" 
                id="email" 
                value="<%=oldInput.email%>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                class="<%=validationError.find(e=>e.path==='email') ? 'invalid':''%>"

                type="password" name="password" id="password" value="<%=oldInput.password%>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                                class="<%=validationError.find(e=>e.path==='email') ? 'invalid':''%>"

                type="password" name="confirmPassword" id="confirmPassword" value="<%=oldInput.confirmPassword%>">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">

            </div>
            <%if(errorMessage){%>
                <p class="user-message user-message--error "><%=errorMessage%></p>
                <%}%>
            <button class="btn" type="submit">SignUp</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>